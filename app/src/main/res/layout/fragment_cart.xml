<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="900dp"
    android:layout_height="160dp"
    tools:context="layout.CartCtr">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/layout_partSelect"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/buAllPart"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="全部"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/buMainPart"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="主面料"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buAround"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:checked="true"
                android:tag="0"
                android:text="面边"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buMiddle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="1"
                android:text="面中"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buAllBorder"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="边"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buBorder"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="滚边"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buBorderSide"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="包边"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buFootAround"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="脚垫"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buFootBorderSide"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="脚垫边"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/buFootMiddle"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_normal_check_style"
                android:button="@null"
                android:tag="0"
                android:text="幻影"
                android:textAlignment="center"
                android:textSize="12sp"
                android:visibility="gone" />
        </RadioGroup>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <RadioGroup
                android:id="@+id/layout_otherMaterial"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:checkedButton="@+id/buMaterial_org"
                android:orientation="vertical"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/buMaterial_org"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="原    款"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/buMaterial_suede"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="麂皮绒"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/buMaterial_summer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="夏目得"
                    android:textAlignment="center" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/layout_ColorChoose"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="#88ffffff"
                android:gravity="center_vertical|center"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/layout_otherMaterial"
                app:layout_constraintRight_toLeftOf="@+id/layout_craftSelect"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/radioButton11"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/buttonSelectBorder"
                    android:button="@drawable/color_button_style" />

                <RadioButton
                    android:id="@+id/radioButton12"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:button="@drawable/color_button_style"
                    android:buttonTint="@android:color/holo_blue_light" />


            </RadioGroup>

            <RadioGroup
                android:id="@+id/layout_craftSelect"
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:background="@color/colorAccent"
                android:checkedButton="@+id/radio_craft_org"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RadioButton
                    android:id="@+id/radio_craft_org"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="无"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="菱     形"
                    android:textAlignment="center" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_normal_check_style"
                    android:button="@null"
                    android:text="非字型"
                    android:textAlignment="center" />
            </RadioGroup>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</FrameLayout>
